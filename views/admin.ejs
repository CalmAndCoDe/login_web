<!DOCTYPE html>
<html>
    <head>
        <title>Page Title</title>
        <meta name="viewport"content="width=device-width, initial-scale=1.0">
        <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
        <link rel="stylesheet" href="../assets/styles/styles.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
        <script src="../assets/jquery/jquery.js"></script>
    </head>
    <body>
       <div class="containerBack">
        <section id="main" class="text">
        
            
            
        </section>
       <%- include("partials/menu"); %>
        </div>
        <div class="topContent">
             <h1><strong>L</strong>
                <strong>O</strong>
                <strong>G</strong>
                <strong>O</strong>
             </h1>
             <p>Welcome to this website</p>
             <a href="#text">See Parallax</a>
       </div>
       <%- include("partials/navbar") -%>
       
       
       <section class="mainContent">
           <div id="text2" class="center">
           <h1>Create Post :</h1>
           <div class="widthLoad">
             <span></span>
           </div>
           <form method="POST" action="/posts">
           <p id="user">Title:</p>
           <input id="userName" type="text" name="title" placeholder="Title">
           <p id="passwordText">Post:</p>
           <input id="password" type="textarea" name="post" placeholder="Post" style="height:50px;">
           <input class="buttonSub" type="submit" style="display:block;">       
                      
           </form>
           </div>
           
       </section>
       <section class="mainContent">
           <div id="text2" class="center">
           <h1>Posts:</h1>
           <div class="widthLoad">
             <span></span>
           </div>
           <ul>
           <% post.forEach(function(post){ %>
           	<li><%= post.title %></li>
           <% }); %>
           </ul>
           </div>
       </section>
       <section class="mainContent">
           <div id="text2" class="center">
           <h1>Messages:</h1>
           <div class="widthLoad">
             <span></span>
           </div>
           <ul>
           <% contact.forEach(function(contact){ %>
           	<li><a href="/dashboard/<%= contact.id %>"><%= contact.sender %></a></li>
           <% }); %>
           </ul>
           </div>
       </section>
       
       <section class="userLogin">
           
       </section>
       
       
       <section class="footerContent">
           <div class="footerText">
               <ul>
                   <li><a href="#main">Home</a></li>
                   <li><a href="#text2">Contact Us</a></li>
               </ul>
               

              
               <p>Copyright &copy; Reserverd</p>
               <p><%= data.email %></p>
           </div>
            
       </section>
       
       
       <div class="topPage">
           <span>
                <a href="#main" class="fas fa-arrow-circle-up"></a>
           </span>
       </div>
       
    </body>
</html>
    
    
    
    
    
    
    
